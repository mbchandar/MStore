<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp" >
  	<TextView
        android:id="@+id/product_id"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:visibility="gone" />
	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:background="@drawable/selectable_background_cardbank"
	    
	    android:gravity="center_vertical"
	    android:padding="8dp" >

        <ImageView
            android:id="@+id/product_image"
            android:layout_width="120dp"
            android:layout_height="175dp"
            android:layout_gravity="top"
            android:adjustViewBounds="true"
            android:baselineAlignBottom="true"
            android:scaleType="fitCenter"
             />
        

	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:gravity="top"
	    android:orientation="vertical" >

	    <TextView
	        android:id="@+id/title"
	        style="@style/CardTitle"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_gravity="top"
	        android:layout_marginLeft="8dp"
	        android:layout_weight="1.33"
	        android:text="title"
	        android:textSize="14dp" />

	    <TextView
	        android:id="@+id/description"
	        style="@style/CardText"
	        android:layout_width="match_parent"
	        android:layout_height="0dp"
	        android:layout_gravity="top"
	        android:layout_marginLeft="8dp"
	        android:layout_weight="1"
	        android:ellipsize="end"
	        android:maxLines="7"
	        android:text="asfsdf sdf sdf sdf" />

	    <RatingBar
	        android:id="@+id/ratingBar1"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_gravity="fill_horizontal"
	        android:numStars="5"
	        android:stepSize="5" />

	    <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_gravity="fill_horizontal"
	        android:baselineAligned="true" >

	        <ImageButton
	            android:id="@+id/share"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_weight="1"
	            android:background="@null"
	            android:src="@drawable/share_48" />

	        <ImageButton
	            android:id="@+id/wishlist"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_weight="1"
	            android:background="@null"
	            android:src="@drawable/hearts_48" />

	        <ImageButton
	            android:id="@+id/buy_now_button_rose"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_weight="1"
	            android:background="@android:color/transparent"
	            android:src="@drawable/buy_48" />
	    </LinearLayout>

	</LinearLayout>
    
 </LinearLayout>

</LinearLayout>